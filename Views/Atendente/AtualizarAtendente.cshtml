@model CGenius.Models.Atendente

@{
    ViewData["Title"] = "Atualizar Atendente";
}

<h1>Atualizar Atendente</h1>

<form asp-action="AtualizarAtendente" method="post">
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="NomeAtendente" class="control-label"></label>
        <input asp-for="NomeAtendente" class="form-control" />
        <span asp-validation-for="NomeAtendente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cpf" class="control-label"></label>
        <input asp-for="Cpf" class="form-control" />
        <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Setor" class="control-label"></label>
        <input asp-for="Setor" class="form-control" />
        <span asp-validation-for="Setor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Senha" class="control-label"></label>
        <input asp-for="Senha" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Atualizar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="ListarAtendentes">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
