@model CGenius.Models.ScriptVendas

@{
    ViewData["Title"] = "Cadastrar Script de Vendas";
}

<h1>Cadastrar Script de Vendas</h1>

<form asp-action="CadastrarScript" method="post">
    <div class="form-group">
        <label asp-for="IdCompra" class="control-label"></label>
        <input asp-for="IdCompra" class="form-control" />
        <span asp-validation-for="IdCompra" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdProduto" class="control-label"></label>
        <input asp-for="IdProduto" class="form-control" />
        <span asp-validation-for="IdProduto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdChamada" class="control-label"></label>
        <input asp-for="IdChamada" class="form-control" />
        <span asp-validation-for="IdChamada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CpfCliente" class="control-label"></label>
        <input asp-for="CpfCliente" class="form-control" />
        <span asp-validation-for="CpfCliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescricaoScript" class="control-label"></label>
        <input asp-for="DescricaoScript" class="form-control" />
        <span asp-validation-for="DescricaoScript" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="ListarScripts">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
